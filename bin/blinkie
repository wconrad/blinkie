#!/usr/bin/env ruby

require "gosu"

class GameWindow < Gosu::Window

  def initialize
    super 640, 480
    self.caption = "Gosu Tutorial Game"
    @led_off_image = Gosu::Image.new(image_path("led-off.png"))
    @led_on_image = Gosu::Image.new(image_path("led-off.png"))
  end

  def needs_cursor?
    true
  end

  def update
  end

  def draw
    @led_off_image.draw(0, 0, 0);
  end

  def image_dir
    File.join(__dir__, "../lib/images")
  end

  def image_path(filename)
    File.join(image_dir, filename)
  end

end

window = GameWindow.new
window.show
